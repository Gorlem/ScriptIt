{
  "schemaVersion": 1,
  "id": "scriptit",
  "version": "${version}",

  "name": "ScriptIt",
  "description": "Script your Minecraft game with Lua!",
  "authors": [
    "Gorlem / Dennis DÃ¶rr"
  ],
  "contact": {
    "homepage": "https://ddoerr.com/"
  },

  "icon": "assets/scriptit/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "com.ddoerr.scriptit.ScriptItMod"
    ],
    "scriptit:library": [
      "com.ddoerr.scriptit.libraries.DefaultLibraries"
    ],
    "scriptit:language": [
      "com.ddoerr.scriptit.languages.lua.LuaLanguage"
    ],
    "scriptit:hud": [
      "com.ddoerr.scriptit.elements.DefaultHudElements"
    ],
    "scriptit:event": [
      "com.ddoerr.scriptit.events.ReceivedChatEventDispatcher",
      "com.ddoerr.scriptit.events.SentChatEventDispatcher",
      "com.ddoerr.scriptit.events.GameJoinEventDispatcher"
    ],
    "cotton-client-commands": [
      "com.ddoerr.scriptit.commands.ScriptItCommand"
    ]
  },

  "mixins": [
    "scriptit.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.4.0",
    "fabric": "*",
    "cotton-client-commands":"^1.0.0"
  }
}
