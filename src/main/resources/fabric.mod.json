{
  "schemaVersion": 1,
  "id": "scriptit",
  "version": "${version}",

  "name": "ScriptIt",
  "description": "Script your Minecraft game with Lua!",
  "authors": [
    "Gorlem / Dennis DÃ¶rr"
  ],
  "contact": {
    "homepage": "https://ddoerr.com/"
  },

  "icon": "assets/scriptit/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "com.ddoerr.scriptit.ScriptItMod"
    ],
    "scriptit:library": [
      "com.ddoerr.scriptit.libraries.ServerLibrary",
      "com.ddoerr.scriptit.libraries.ScriptsLibrary",
      "com.ddoerr.scriptit.libraries.ChatLibrary",
      "com.ddoerr.scriptit.libraries.GameLibrary",
      "com.ddoerr.scriptit.libraries.PlayerLibrary",
      "com.ddoerr.scriptit.libraries.KeyboardLibrary",
      "com.ddoerr.scriptit.libraries.JsonLibrary",
      "com.ddoerr.scriptit.libraries.GuiLibrary",
      "com.ddoerr.scriptit.libraries.ScoreboardLibrary",
      "com.ddoerr.scriptit.libraries.OptionsLibrary"
    ],
    "scriptit:language": [
      "com.ddoerr.scriptit.languages.lua.LuaLanguage"
    ],
    "scriptit:hud": [
      "com.ddoerr.scriptit.elements.IconHudElement",
      "com.ddoerr.scriptit.elements.TextHudElement"
    ],
    "scriptit:event": [
      "com.ddoerr.scriptit.events.ReceivedChatEventDispatcher",
      "com.ddoerr.scriptit.events.SentChatEventDispatcher",
      "com.ddoerr.scriptit.events.GameJoinEventDispatcher"
    ]
  },

  "mixins": [
    "scriptit.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.4.0",
    "fabric": "*"
  }
}
